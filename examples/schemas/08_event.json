{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "event.json",
  "title": "Event",
  "description": "Calendar event with recurrence and attendees",
  "type": "object",
  "definitions": {
    "Attendee": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "email": { "type": "string", "format": "email" },
        "name": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "accepted", "declined", "tentative"] },
        "role": { "type": "string", "enum": ["organizer", "required", "optional"] },
        "responseTime": { "type": "string", "format": "date-time" }
      },
      "required": ["email", "status"]
    },
    "Recurrence": {
      "type": "object",
      "properties": {
        "frequency": { "type": "string", "enum": ["daily", "weekly", "monthly", "yearly"] },
        "interval": { "type": "integer", "minimum": 1, "default": 1 },
        "daysOfWeek": { "type": "array", "items": { "type": "string", "enum": ["MO", "TU", "WE", "TH", "FR", "SA", "SU"] } },
        "dayOfMonth": { "type": "integer", "minimum": 1, "maximum": 31 },
        "monthOfYear": { "type": "integer", "minimum": 1, "maximum": 12 },
        "count": { "type": "integer", "minimum": 1 },
        "until": { "type": "string", "format": "date" },
        "exceptions": { "type": "array", "items": { "type": "string", "format": "date" } }
      },
      "required": ["frequency"]
    },
    "Reminder": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["email", "push", "sms"] },
        "minutesBefore": { "type": "integer", "minimum": 0 }
      },
      "required": ["type", "minutesBefore"]
    },
    "Location": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "address": { "type": "string" },
        "coordinates": {
          "type": "object",
          "properties": {
            "lat": { "type": "number" },
            "lng": { "type": "number" }
          }
        },
        "virtual": { "type": "boolean" },
        "meetingUrl": { "type": "string", "format": "uri" }
      }
    }
  },
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "start": { "type": "string", "format": "date-time" },
    "end": { "type": "string", "format": "date-time" },
    "allDay": { "type": "boolean", "default": false },
    "timezone": { "type": "string" },
    "location": { "$ref": "#/definitions/Location" },
    "organizer": { "$ref": "#/definitions/Attendee" },
    "attendees": { "type": "array", "items": { "$ref": "#/definitions/Attendee" } },
    "recurrence": { "$ref": "#/definitions/Recurrence" },
    "reminders": { "type": "array", "items": { "$ref": "#/definitions/Reminder" } },
    "status": { "type": "string", "enum": ["confirmed", "tentative", "cancelled"] },
    "visibility": { "type": "string", "enum": ["public", "private", "confidential"] },
    "color": { "type": "string", "pattern": "^#[0-9A-Fa-f]{6}$" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "title", "start", "end"]
}
