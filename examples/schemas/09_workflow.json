{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "workflow.json",
  "title": "Workflow",
  "description": "Automation workflow with steps and conditions",
  "type": "object",
  "definitions": {
    "Step": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["action", "condition", "loop", "parallel", "wait"] },
        "action": { "$ref": "#/definitions/Action" },
        "condition": { "$ref": "#/definitions/Condition" },
        "onSuccess": { "type": "string" },
        "onFailure": { "type": "string" },
        "retryPolicy": { "$ref": "#/definitions/RetryPolicy" },
        "timeout": { "type": "integer", "minimum": 0 }
      },
      "required": ["id", "name", "type"]
    },
    "Action": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["http", "email", "script", "database", "notification"] },
        "config": { "type": "object", "additionalProperties": true },
        "inputs": { "type": "object", "additionalProperties": true },
        "outputs": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["type"]
    },
    "Condition": {
      "type": "object",
      "properties": {
        "expression": { "type": "string" },
        "operator": { "type": "string", "enum": ["eq", "ne", "gt", "lt", "gte", "lte", "contains", "matches"] },
        "left": { "type": "string" },
        "right": {},
        "branches": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "condition": { "type": "string" },
              "nextStep": { "type": "string" }
            }
          }
        }
      }
    },
    "RetryPolicy": {
      "type": "object",
      "properties": {
        "maxRetries": { "type": "integer", "minimum": 0, "default": 3 },
        "backoffMultiplier": { "type": "number", "minimum": 1 },
        "initialDelay": { "type": "integer", "minimum": 0 },
        "maxDelay": { "type": "integer", "minimum": 0 }
      }
    },
    "Trigger": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["manual", "schedule", "webhook", "event"] },
        "schedule": { "type": "string", "description": "Cron expression" },
        "webhookPath": { "type": "string" },
        "eventType": { "type": "string" },
        "filters": { "type": "object", "additionalProperties": true }
      },
      "required": ["type"]
    }
  },
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "status": { "type": "string", "enum": ["draft", "active", "paused", "archived"] },
    "triggers": { "type": "array", "items": { "$ref": "#/definitions/Trigger" } },
    "steps": { "type": "array", "items": { "$ref": "#/definitions/Step" } },
    "variables": { "type": "object", "additionalProperties": true },
    "metadata": { "type": "object", "additionalProperties": true },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "name", "status", "steps"]
}
