{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "notification.json",
  "title": "Notification",
  "description": "Multi-channel notification with templates",
  "type": "object",
  "definitions": {
    "Channel": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["email", "sms", "push", "in_app", "slack", "webhook"] },
        "enabled": { "type": "boolean", "default": true },
        "config": {
          "oneOf": [
            { "$ref": "#/definitions/EmailConfig" },
            { "$ref": "#/definitions/SMSConfig" },
            { "$ref": "#/definitions/PushConfig" },
            { "$ref": "#/definitions/WebhookConfig" }
          ]
        }
      },
      "required": ["type"]
    },
    "EmailConfig": {
      "type": "object",
      "properties": {
        "from": { "type": "string", "format": "email" },
        "replyTo": { "type": "string", "format": "email" },
        "cc": { "type": "array", "items": { "type": "string", "format": "email" } },
        "bcc": { "type": "array", "items": { "type": "string", "format": "email" } },
        "attachments": { "type": "array", "items": { "type": "string", "format": "uri" } }
      }
    },
    "SMSConfig": {
      "type": "object",
      "properties": {
        "from": { "type": "string" },
        "provider": { "type": "string", "enum": ["twilio", "nexmo", "aws_sns"] }
      }
    },
    "PushConfig": {
      "type": "object",
      "properties": {
        "icon": { "type": "string", "format": "uri" },
        "badge": { "type": "integer" },
        "sound": { "type": "string" },
        "data": { "type": "object", "additionalProperties": true }
      }
    },
    "WebhookConfig": {
      "type": "object",
      "properties": {
        "url": { "type": "string", "format": "uri" },
        "method": { "type": "string", "enum": ["GET", "POST", "PUT"] },
        "headers": { "type": "object", "additionalProperties": { "type": "string" } }
      },
      "required": ["url"]
    },
    "Template": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "subject": { "type": "string" },
        "body": { "type": "string" },
        "bodyHtml": { "type": "string" },
        "variables": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "body"]
    },
    "Recipient": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "deviceTokens": { "type": "array", "items": { "type": "string" } },
        "preferences": { "type": "object", "additionalProperties": { "type": "boolean" } }
      }
    }
  },
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "type": { "type": "string" },
    "priority": { "type": "string", "enum": ["low", "normal", "high", "urgent"] },
    "recipients": { "type": "array", "items": { "$ref": "#/definitions/Recipient" }, "minItems": 1 },
    "channels": { "type": "array", "items": { "$ref": "#/definitions/Channel" } },
    "template": { "$ref": "#/definitions/Template" },
    "data": { "type": "object", "additionalProperties": true },
    "scheduledFor": { "type": "string", "format": "date-time" },
    "expiresAt": { "type": "string", "format": "date-time" },
    "status": { "type": "string", "enum": ["pending", "sent", "delivered", "failed", "cancelled"] },
    "sentAt": { "type": "string", "format": "date-time" },
    "createdAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "type", "recipients", "template", "status"]
}
